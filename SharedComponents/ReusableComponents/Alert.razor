<div class="@($"alert alert-{Style.ToString().ToLower()}")" role="alert">
    @ChildContent 
</div>
@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; } =@<b>Default alert value</b>;
    [Parameter]
    public AlertStyle Style { get; set; }   
   
    public enum AlertStyle
    {
        Primary,
        Secondary,
        Success,
        Danger,
        Warning,
        Info,
        Light,
        Dark
    }

}
